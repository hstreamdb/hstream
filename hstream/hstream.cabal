cabal-version: 2.2
name:          hstream
version:       0.1.0.0
synopsis:
  High performance stream processing platform for IoT data written in Haskell.

description:
  Please see the README on Github at
  <https://github.com/hstreamdb/hstream#readme>

license:       BSD-3-Clause
license-file:  LICENSE
copyright:     Copyright (c) 2020 EMQ Technologies Co., Ltd.
author:        Feng Lee <feng@emqx.io>
maintainer:    lambda@emqx.io, wangbin@emqx.io
tested-with:   GHC ==8.10.4
category:      Database
homepage:      https://github.com/hstreamdb/hstream
bug-reports:   https://github.com/hstreamdb/hstream/issues
build-type:    Simple

source-repository head
  type:     git
  location: https://github.com/hstreamdb/hstream

library
  exposed-modules:
    HStream.Client.Action
    HStream.Server.Exception
    HStream.Server.Handler
    HStream.Server.Handler.Common
    HStream.Server.Handler.Connector
    HStream.Server.Handler.Query
    HStream.Server.Handler.StoreAdmin
    HStream.Server.Handler.View
    HStream.Server.Persistence
    HStream.Server.Persistence.Exception

  hs-source-dirs:   src
  build-depends:
    , aeson
    , aeson-pretty
    , ansi-terminal
    , base
    , bytestring
    , clickhouse-haskell
    , containers
    , deepseq
    , grpc-haskell
    , grpc-haskell-core
    , haxl
    , hstore-admin
    , hstream-common
    , hstream-connector
    , hstream-processing
    , hstream-sql
    , hstream-store
    , microlens
    , microlens-aeson
    , mysql-haskell
    , proto3-suite
    , proto3-wire
    , rio
    , scientific
    , stm
    , suspend
    , table-layout
    , text
    , time
    , timers
    , unordered-containers
    , vector
    , Z-Data
    , Z-IO
    , zoovisitor

  default-language: Haskell2010
  ghc-options:
    -Wall -Wcompat -Widentities -Wincomplete-record-updates
    -Wincomplete-uni-patterns -Wpartial-fields -Wredundant-constraints

executable hstream-server
  main-is:          app/server.hs
  build-depends:
    , base
    , bytestring
    , containers
    , deepseq
    , grpc-haskell
    , grpc-haskell-core
    , hstore-admin
    , hstream
    , hstream-common
    , hstream-store
    , optparse-applicative
    , proto3-suite
    , proto3-wire
    , raw-strings-qq
    , stm
    , suspend
    , text
    , timers
    , vector
    , Z-Data
    , Z-IO
    , zoovisitor

  default-language: Haskell2010
  ghc-options:
    -Wall -Wcompat -Widentities -Wincomplete-record-updates
    -Wincomplete-uni-patterns -Wpartial-fields -Wredundant-constraints
    -threaded -rtsopts -with-rtsopts=-N

executable hstream-client
  main-is:          app/client.hs
  build-depends:
    , ansi-terminal
    , base
    , bytestring
    , containers
    , grpc-haskell
    , grpc-haskell-core
    , haskeline
    , hstream
    , hstream-common
    , hstream-sql
    , hstream-store
    , optparse-applicative
    , random
    , raw-strings-qq
    , text
    , unix

  default-language: Haskell2010
  ghc-options:
    -Wall -Wcompat -Widentities -Wincomplete-record-updates
    -Wincomplete-uni-patterns -Wpartial-fields -Wredundant-constraints
    -threaded -rtsopts -with-rtsopts=-N

test-suite hstream-test
  type:               exitcode-stdio-1.0
  main-is:            Spec.hs
  other-modules:
    HStream.HandlerSpec
    HStream.AckSpec
    HStream.RegressionSpec
    HStream.RunConnectorSpec
    HStream.RunQuerySpec
    HStream.RunSQLSpec
    HStream.RunStoreAdminSpec
    HStream.SpecUtils

  hs-source-dirs:     test
  build-depends:
    , aeson
    , base                  >=4.11 && <5
    , bytestring
    , clickhouse-haskell
    , containers
    , grpc-haskell
    , grpc-haskell-core
    , hspec
    , hstream
    , hstream-common
    , hstream-sql
    , hstream-store
    , io-streams
    , mysql-haskell
    , proto3-suite
    , random                ^>=1.2
    , scientific
    , text
    , unordered-containers
    , vector
    , Z-Data
    , async

  default-language:   Haskell2010
  build-tool-depends: hspec-discover:hspec-discover ==2.*
  ghc-options:
    -Wall -Wcompat -Widentities -Wincomplete-record-updates
    -Wincomplete-uni-patterns -Wpartial-fields -Wredundant-constraints
    -threaded -rtsopts -with-rtsopts=-N
